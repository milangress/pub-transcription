    const status = createPrintStatusMessage(
      printId,
      PRINT_ACTIONS.PRINT_ERROR,
      PRINT_STATUS.ERROR,
      {
        message: `ü•µ Error: ${errorMessage}`,
        error: errorMessage,
      },
    );
    this.sendToAllWindows(status);

    // Update notification for print failure
