{
  "name": "pub-transcriptions",
  "version": "1.0.0",
  "description": "Pub Transcriptions",
  "private": false,
  "license": "MIT",
  "main": "main.js",
  "author": "Milan Gress <mgress@me.com>",
  "build": {
    "icon": "public/favicon.png",
    "productName": "Pub Transcriptions",
    "files": [
      "public/**/*",
      "main.js",
      "node_modules/**/*",
      "preload.js",
      "models/**/*",
      "lib/**/*",
      "input-defaults/**/*"
    ],
    "extraFiles": [],
    "extraResources": [],
    "win": {},
    "linux": {},
    "mac": {
      "asar": false,
      "target": "dir"
    }
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "dlwisper": "./models/download-ggml-model.sh small.en-q5_1",
    "dev": "rollup -c -w --bundleConfigAsCjs",
    "start": "sirv public --no-clear",
    "electron": "wait-on http://localhost:8080 && electron .",
    "electron-dev": "concurrently \"yarn run dev\" \"yarn run electron\"",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder",
    "electron-rebuild": "./node_modules/.bin/electron-rebuild"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.11.1",
    "@codemirror/commands": "^6.8.0",
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.7",
    "@codemirror/language": "^6.10.8",
    "@codemirror/lint": "^6.8.4",
    "@codemirror/search": "^6.5.8",
    "@codemirror/state": "^6.5.1",
    "@codemirror/view": "^6.36.2",
    "@picovoice/pvrecorder-node": "^1.2.1",
    "@replit/codemirror-vscode-keymap": "^6.0.2",
    "codemirror": "^6.0.1",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "prismjs": "^1.29.0",
    "svelte-codemirror-editor": "^1.2.0",
    "svelte-simple-code-editor": "^0.0.2",
    "wavefile": "^11.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.3.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "0.2.1",
    "@zerodevx/svelte-toast": "^0.9.5",
    "concurrently": "^7.5.0",
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4",
    "rollup": "^3.2.3",
    "rollup-plugin-css-only": "^4.2.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.52.0",
    "wait-on": "^6.0.1"
  }
}
