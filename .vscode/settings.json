{
  "languageToolLinter.languageTool.ignoredWordsInWorkspace": [
    "cpp",
    "css-parameters",
    "gerganov",
    "tion"
  ],
  "languageToolLinter.languageTool.disabledCategories": "UNLIKELY_OPENING_PUNCTUATION",
  "languageToolLinter.languageTool.disabledRules": "UNLIKELY_OPENING_PUNCTUATION",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.useFlatConfig": true,
  "eslint.options": {
    "overrideConfigFile": "eslint.config.mjs"
  },
  "eslint.nodePath": "./node_modules",
  "eslint.validate": ["javascript", "typescript", "svelte"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "cSpell.words": ["crip"]
}
